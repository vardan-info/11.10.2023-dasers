public class Main {
    public static void main(String[] args) {
//                     0  1  2  3  4  5index
        int arr[] = {8, 5, 9, 6, 7, 10};
        int max = arr[0];//arr 0 8 na //
        int index = 0;
        for (int i = 0; i < 6; i++) {//0.1.2.3.4.5.6
            if (arr[i] > max) {//8.
                max = arr[i];//9 10
                index = i;//2 5
            }


        }
        System.out.println(index);
        System.out.println(max);//6

//5.10 tpum
