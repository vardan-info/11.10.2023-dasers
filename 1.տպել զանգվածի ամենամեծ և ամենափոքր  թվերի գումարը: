public class Main {
    public static void main(String[] args) {
        int[] arr = {10, 7, 1, 4, 7, 4, 11};

        int max = arr[0];
          int min = arr[0];
        for (int i = 0; i < arr.length; i++) {
            if (arr[i] > max) {
                  max = arr[i];


            }

        }
        for (int i=0; i <arr.length;i++){
            if(arr[i]<min){
                min=arr[i];
            }
        }

        System.out.println(max); // => 11
         System.out.println(min); // => 11
         System.out.println(max +min); // => 11
    }
}

11.1.12
